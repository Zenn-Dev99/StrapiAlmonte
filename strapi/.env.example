WOO_LIBRERIA_KEY=
WOO_LIBRERIA_SECRET=
WOO_WEBHOOK_SECRET_LIBRERIA=

# WooCommerce Editorial Moraleja (futuro)
WOO_EDITORIAL_URL=
WOO_EDITORIAL_KEY=
WOO_EDITORIAL_SECRET=
WOO_WEBHOOK_SECRET_EDITORIAL=

# Cloudflare R2 / S3 (producción)
# Configura estos valores en producción para servir imágenes desde media.moraleja.cl
S3_BASE_URL=https://media.moraleja.cl
S3_BUCKET=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_REGION=auto
S3_ENDPOINT=https://<ACCOUNT_ID>.r2.cloudflarestorage.com
S3_FORCE_PATH_STYLE=true

# Logística
VOLUMETRIC_DIVISOR_CMKG=5000

# Tareas de mantenimiento (se ejecutan en bootstrap solo si están en true)
BOOTSTRAP_CONTENT_MANAGER_SYNC=false
BOOTSTRAP_MIGRATE_ESTADOS=false
BOOTSTRAP_BACKFILL_TELEFONO=false
BOOTSTRAP_BACKFILL_CURSO_TITULOS=false
BOOTSTRAP_BACKFILL_CURSO_ASIGNATURA=false
BOOTSTRAP_ENSURE_EMAIL_TEMPLATES=true
