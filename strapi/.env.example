# ============================================
# CONFIGURACIÃ“N BÃSICA DE STRAPI
# ============================================
HOST=0.0.0.0
PORT=1337
NODE_ENV=development
URL=http://localhost:1337
ADMIN_PATH=/admin

# ============================================
# SEGURIDAD - SECRETOS (GENERAR NUEVOS)
# ============================================
# IMPORTANTE: Genera nuevos secretos para cada entorno
# Puedes usar: openssl rand -base64 32
ADMIN_JWT_SECRET=change-me-generate-new-secret
JWT_SECRET=change-me-generate-new-secret
API_TOKEN_SALT=change-me-generate-new-secret
TRANSFER_TOKEN_SALT=change-me-generate-new-secret
APP_KEYS=change-me-generate-new-secret-1,change-me-generate-new-secret-2,change-me-generate-new-secret-3,change-me-generate-new-secret-4
ENCRYPTION_KEY=change-me-generate-new-secret

# ============================================
# BASE DE DATOS
# ============================================
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=.tmp/data.db

# Para PostgreSQL (producciÃ³n):
# DATABASE_CLIENT=postgres
# DATABASE_HOST=your-database-host
# DATABASE_PORT=5432
# DATABASE_NAME=your-database-name
# DATABASE_USERNAME=your-username
# DATABASE_PASSWORD=your-password
# DATABASE_SSL=true
# DATABASE_SSL_REJECT_UNAUTHORIZED=false

# ============================================
# EMAIL - SMTP PRINCIPAL
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_DEFAULT_FROM=Your Name your-email@domain.com
SMTP_DEFAULT_REPLY_TO=your-email@domain.com
SMTP_TLS_REJECT_UNAUTHORIZED=true

# ============================================
# EMAIL - MÃšLTIPLES CUENTAS SMTP
# ============================================
# Define las cuentas separadas por comas
SMTP_ACCOUNTS=colegios,educacion,contacto,andres

# Cuenta: colegios
SMTP_COLEGIOS_HOST=smtp.gmail.com
SMTP_COLEGIOS_PORT=465
SMTP_COLEGIOS_SECURE=true
SMTP_COLEGIOS_USERNAME=colegios@domain.com
SMTP_COLEGIOS_PASSWORD=your-app-password
SMTP_COLEGIOS_DEFAULT_FROM=Name colegios@domain.com
SMTP_COLEGIOS_DEFAULT_REPLY_TO=colegios@domain.com
SMTP_COLEGIOS_TLS_REJECT_UNAUTHORIZED=true

# Cuenta: educacion
SMTP_EDUCACION_HOST=smtp.gmail.com
SMTP_EDUCACION_PORT=465
SMTP_EDUCACION_SECURE=true
SMTP_EDUCACION_USERNAME=educacion@domain.com
SMTP_EDUCACION_PASSWORD=your-app-password
SMTP_EDUCACION_DEFAULT_FROM=Name educacion@domain.com
SMTP_EDUCACION_DEFAULT_REPLY_TO=educacion@domain.com
SMTP_EDUCACION_TLS_REJECT_UNAUTHORIZED=true

# Cuenta: contacto
SMTP_CONTACTO_HOST=smtp.sendgrid.net
SMTP_CONTACTO_PORT=465
SMTP_CONTACTO_SECURE=true
SMTP_CONTACTO_USERNAME=apikey
SMTP_CONTACTO_PASSWORD=your-sendgrid-api-key
SMTP_CONTACTO_DEFAULT_FROM=Name contacto@domain.com
SMTP_CONTACTO_DEFAULT_REPLY_TO=contacto@domain.com
SMTP_CONTACTO_TLS_REJECT_UNAUTHORIZED=true

# Cuenta: andres
SMTP_ANDRES_HOST=smtp.gmail.com
SMTP_ANDRES_PORT=465
SMTP_ANDRES_SECURE=true
SMTP_ANDRES_USERNAME=andres@domain.com
SMTP_ANDRES_PASSWORD=your-app-password
SMTP_ANDRES_DEFAULT_FROM=Name andres@domain.com
SMTP_ANDRES_DEFAULT_REPLY_TO=andres@domain.com
SMTP_ANDRES_TLS_REJECT_UNAUTHORIZED=true

# ============================================
# EMAIL API - TOKENS Y CUENTAS PERMITIDAS
# ============================================
EMAIL_API_ALLOWED_ACCOUNTS=colegios,educacion,contacto,andres
EMAIL_API_TOKENS=token1,token2,token3
EMAIL_DEDUP_DAYS=180

# ============================================
# SENDGRID (Alternativa)
# ============================================
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_DEFAULT_FROM=your-email@domain.com
SENDGRID_DEFAULT_REPLY_TO=your-email@domain.com

# ============================================
# MAILERLITE
# ============================================
MAILERLITE_API_KEY=your-mailerlite-api-key

# ============================================
# CLOUDFLARE R2 / S3 STORAGE
# ============================================
S3_BASE_URL=https://media.yourdomain.com
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
S3_REGION=auto
S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
S3_FORCE_PATH_STYLE=true

# ============================================
# WOOCOMMERCE - MORALEJA
# ============================================
WOO_MORALEJA_URL=https://staging.moraleja.cl
WOO_MORALEJA_CONSUMER_KEY=your-consumer-key
WOO_MORALEJA_CONSUMER_SECRET=your-consumer-secret

# ============================================
# WOOCOMMERCE - ESCOLAR
# ============================================
WOO_ESCOLAR_URL=https://staging.escolar.cl
WOO_ESCOLAR_CONSUMER_KEY=your-consumer-key
WOO_ESCOLAR_CONSUMER_SECRET=your-consumer-secret

# ============================================
# CONFIGURACIÃ“N DE STRAPI
# ============================================
STRAPI_ENABLE_CONTENT_TYPE_BUILDER=false
STRAPI_ENABLE_TRANSFERS=true

# ============================================
# INTEGRACIONES
# ============================================
ENABLE_WOOCOMMERCE_SYNC=true
FRONTEND_URL=https://your-frontend-url.com

# ============================================
# IMPORT/AUTH TOKEN
# ============================================
IMPORT_TOKEN=change-me-long-random-token
